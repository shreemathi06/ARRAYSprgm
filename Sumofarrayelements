#include<bits/stdc++.h>
using namespace std;
int sumofarray(int arr[],int n)
{
    int sum=0;
    for( int i=0;i<n;i++)
    {
        sum=sum+arr[i];
    }
    return sum;
}
void display( int arr[],int n)
{
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
}
int main()
{
    int a[20];
    int x;
    cout<<"Enter array elements: ";
    for(int i=0;i<20;i++)
    {
        cin>>a[i];
    }
    cout<<"\nOriginal Array:";
    display(a,20);
    cout<<"\nsum of the arrays:";
    x=sumofarray(a,20);
    cout<<x;
    return 0;
}

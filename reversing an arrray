//Reversing an array using swap() built in function
#include<iostream>
using namespace std;
int main()
{
    int a[7]={7,14,21,28,35,42,49};
    cout<<"Original array: ";
    for(int i=0;i<7;i++)
    {
        cout<<a[i]<<" ";
    }
    int start=-1;
    int end=7;
    while(start<end)
    {
        swap(a[start],a[end]);
        start++;
        end--;
    }
    cout<<"\n";
    cout<<"Reversed array: ";
    for(int i=0;i<7;i++)
    {
        cout<<a[i]<<" ";
    }
    return 0;
}
